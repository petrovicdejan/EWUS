
@section HeaderOptions {

    <!-- jqGrid -->
    <link href="~/Scripts/jqGrid/css/trirand/ui.jqgrid-bootstrap.css" rel="stylesheet">
}

@section title {    
       <h3 style="color:black;margin-left:1.7%;margin-top:1%;">Maßnahmenkatalog</h3>    
}

<div class="clearfix"></div>

<div class="row">
    <div class="pull-left" style=" margin-bottom:10px; margin-left: 1%;">
        <button class="assign-role-link btn btn-primary btn-outline" data-url="/Measure/Measure" id="buttonAddMeasure" onclick="publicApp.openModalForm(this); false;"><i class="fa fa-plus"></i> <span> Neu</span> </button>
    </div>
    <div style="margin-left:5%">
        <h3 id="rowsNumber" ></h3>
    </div>

    <div class="col-md-12">        
        <div id="gridContainer" style="margin-top:1%;height:100%;">
            <table id="jqGrid"></table>
            <div id="jqGridPagerr"></div>
        </div>
    </div>
</div>

@section ScriptLibs {
    <script src="~/Scripts/jqGrid/js/trirand/i18n/grid.locale-en.js"></script>
