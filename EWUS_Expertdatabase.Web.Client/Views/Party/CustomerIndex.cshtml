@section HeaderOptions {
    <!-- jqGrid -->
    <link href="~/Scripts/jqGrid/css/trirand/ui.jqgrid-bootstrap.css" rel="stylesheet">
}

<div class="page-title">
    <div class="row">
        <div class="title_left" style="margin-left: 15px;">
            <h3>Kunden</h3>
        </div>
    </div>
    <div class="pull-left" style=" margin-bottom:10px;  margin-left: 5px;">
        <button class="assign-role-link btn btn-primary btn-outline" data-url="/Party/Customer" id="buttonAddCustomer" onclick="publicApp.openModalForm(this); false;"><i class="fa fa-plus"></i> <span> Neu</span> </button>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12" style="margin-top:3%;">
        <div id="gridContainer" style=" margin-bottom:10px;">
            <table id="jqGrid_customer"></table>
            <div id="jqGridPager_customer"></div>
        </div>
    </div>
</div>

@section ScriptLibs {
    <script src="~/Scripts/jqGrid/js/trirand/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jqGrid/js/trirand/jquery.jqGrid.min.js"></script>

    <script>
        $.jgrid.defaults.width = 100;
        $.jgrid.defaults.responsive = true;
        $.jgrid.defaults.styleUI = 'Bootstrap';
    </script>
    <script src="~/Lib/App/Views/Party/customerIndex.js"></script>
}